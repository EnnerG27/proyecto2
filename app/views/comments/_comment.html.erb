<div class="card mb-3">
  <div class="card-body">
    <p><strong>Commenter:</strong> <%= comment.commenter %></p>
    <p><strong>Comment:</strong> <%= comment.body %></p>

    <%= button_to "Delete Comment", article_comment_path(comment.article, comment),
      method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger btn-sm" %>
  </div>
</div>
